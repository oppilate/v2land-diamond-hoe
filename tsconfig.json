{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/*",
    "src/**/*",
    "app.ts",
    "node_modules/@types/puppeteer/src/index.d.ts",
    "node_modules/@types/generic-pool/src/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
